# =============================================================
# IDP System - Environment Configuration
# =============================================================

# Database
DATABASE_URL=sqlite:///./app.db
SECRET_KEY=your-secret-key-here

# Application
APP_NAME=IDP - Intelligent Document Processing

# =============================================================
# GEMINI API KEYS (Multiple keys for rate limit handling)
# =============================================================

# Primary API Key (required)
GOOGLE_API_KEY=your_primary_gemini_api_key_here

# Fallback API Keys (optional, but recommended)
# Add as many as you have - system will rotate through them
GOOGLE_API_KEY_1=your_fallback_key_1
GOOGLE_API_KEY_2=your_fallback_key_2
GOOGLE_API_KEY_3=your_fallback_key_3
# ... add more as needed up to GOOGLE_API_KEY_20

# Alternative: Comma-separated list of keys
# GOOGLE_API_KEYS=key1,key2,key3,key4

# =============================================================
# EMAIL NOTIFICATIONS (Optional - SendGrid)
# =============================================================

SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=idp-system@yourcompany.com
SENDGRID_FROM_NAME=IDP System

# =============================================================
# TELEGRAM INTEGRATION (Optional - Placeholder)
# =============================================================

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/telegram
