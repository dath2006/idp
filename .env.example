# ============================================================
# IDP Privacy-First Configuration
# ============================================================
# Copy this file to .env and fill in your values

# ============================================================
# MongoDB (Required for Privacy-First Mode)
# ============================================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=idp_privacy

# ============================================================
# Telegram Bot (Optional - for Telegram document intake)
# ============================================================
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# For production, set webhook URL (must be HTTPS)
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/v1/webhooks/telegram

# ============================================================
# Email Receiver - IMAP (Optional - for email document intake)
# ============================================================
# Gmail: Use App Password (https://myaccount.google.com/apppasswords)
# Outlook: IMAP is enabled by default
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_EMAIL=your-email@gmail.com
IMAP_PASSWORD=your-app-password
IMAP_USE_SSL=true
IMAP_MAILBOX=INBOX
EMAIL_POLL_INTERVAL=60

# ============================================================
# Email Sender - SMTP (Optional - for forwarding to departments)
# ============================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Or use SendGrid instead of SMTP
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================================
# ML Classification (DistilBERT)
# ============================================================
# Path to your custom trained DistilBERT model
# If not found, falls back to rule-based classification
DISTILBERT_MODEL_PATH=./models/document_classifier
USE_GPU=false
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.6
CLASSIFICATION_REVIEW_THRESHOLD=0.5

# ============================================================
# File Storage
# ============================================================
ATTACHMENT_STORAGE_PATH=./storage/attachments
TELEGRAM_STORAGE_PATH=./storage/telegram_files
MANUAL_UPLOAD_PATH=./storage/manual_uploads
MAX_FILE_SIZE_MB=50

# ============================================================
# Privacy Mode
# ============================================================
# Set to true for privacy-first mode (recommended)
# Set to false to enable legacy LLM-based processing
PRIVACY_MODE=true
ENABLE_LEGACY_LLM=false

# ============================================================
# Application
# ============================================================
APP_NAME=IDP Privacy-First
SECRET_KEY=change-me-in-production-use-strong-random-string
DEBUG=false

# ============================================================
# Legacy LLM Settings (Only if ENABLE_LEGACY_LLM=true)
# ============================================================
# Google Gemini API Key
GOOGLE_API_KEY=your_google_api_key

# Fallback API Keys (optional)
GOOGLE_API_KEY_1=your_fallback_key_1
GOOGLE_API_KEY_2=your_fallback_key_2
GOOGLE_API_KEY_3=your_fallback_key_3

# Groq API Key (alternative)
GROQ_API_KEY=your_groq_api_key